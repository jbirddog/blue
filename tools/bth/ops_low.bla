; low ops used for testing

opcode_tbl:
.offset = 0x80

opBI	op_asrt, 1, 0	;	( t/f -- )	Assert top of stack is true
	comp
	endcomp
	comp
		litb	0xFF
		exit
	endcomp
	ifelse
	ret
end_op

opBI	op_asrteq, 1, 0	;	( a b -- )	Assert a and b are eq
	eq
	callop	op_asrt_code
	ret
end_op

opBI	op_asrtne, 1, 0	;	( a b -- )	Assert a and b are not eq
	eq
	not
	callop	op_asrt_code
	ret
end_op
